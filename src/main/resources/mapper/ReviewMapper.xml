<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dress.server.mapper.ReviewMapper">
    <!-- #{}는 dto로 값을 받아올때 사용 -->
    <insert id="addReview">
        INSERT INTO review(img_url, create_date, u_pk, content)
        VALUES(#{imgUrl}, now(), #{uPk}, #{content})
    </insert>
    <!-- 조회 컬럼명으로 dto에 담긴다.-->
    <select id="getAllReview" resultType="Review">
        SELECT a.r_pk, a.img_url, a.create_date, a.content, b.u_id FROM review a INNER JOIN user b ON a.u_pk = b.u_pk
    </select>

    <select id="getReviewByPk" resultType="Review" parameterType="int">
        SELECT * FROM review WHERE r_pk=#{rPk}
    </select>

    <select id="getMyReviewByPk" resultType="Review" parameterType="int">
        SELECT *FROM review WHERE u_pk=#{uPk}
    </select>
</mapper>